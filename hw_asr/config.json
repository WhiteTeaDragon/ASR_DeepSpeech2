{
  "name": "default_config",
  "n_gpu": 1,
  "overfit_on_one_batch": "True",
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "Gain",
        "args": {
          "min_gain_in_db": -15.0,
          "max_gain_in_db": 5.0,
          "p": 0.5
      }},
      {
        "type": "Noise",
        "args": {
          "noise_url":  "https://zenodo.org/record/2529934/files/FSDnoisy18k.audio_test.zip"
        }
      }, {"type": "SpeedPerturbation", "args": {"speed_x": 0.9}
      }, {"type": "SpeedPerturbation", "args": {"speed_x": 1.1}}],
    "spectrogram": [{"type": "Cutout"}, {"type": "RandomErasing"}]
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 128,
      "num_of_block_repeats": 1,
      "num_of_repeats_inside_blocks": 5
    }
  },
  "data": {
    "train": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.01,
      "weight_decay": 0.0001
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 5,
      "gamma": 0.1
    },
    "frequency": "epoch"
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10,
    "beam_search": "True"
  }
}
