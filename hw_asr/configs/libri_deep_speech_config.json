{
  "name": "libri_deep_speech_config",
  "n_gpu": 1,
  "overfit_on_one_batch": "False",
  "bpe": {
    "vocab_size": 32,
    "model_file": 0,
    "model_path": "hw-asr/data/datasets/bpe_lj.model"
  },
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
        "n_mels": 64,
        "n_fft": 512
      }
    }
  },
  "augmentations": {
    "p": 1,
    "wave": [
      {
        "type": "Gain",
        "args": {
          "min_gain_in_db": -15.0,
          "max_gain_in_db": 5.0,
          "p": 0.5
      }},
      {
        "type": "Noise",
        "args": {
          "noise_url":  "https://zenodo.org/record/2529934/files/FSDnoisy18k.audio_test.zip",
          "noise_level": 1
        }
      }, {"type": "SpeedPerturbation",
        "args": {"speed_min": 0.9, "speed_max": 1.1}}
    ],
    "spectrogram": [{"type": "Cutout", "args": {}},
      {"type": "RandomErasing", "args": {}}]
  },
  "arch": {
    "type": "DeepSpeechModel",
    "args": {
      "n_feats": 64,
      "n_layers": 4,
      "hidden_size": 512,
      "dropout": 0
    }
  },
  "data": {
    "train": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 64,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "not_resume": 1,
    "type": "AdamW",
    "args": {
      "lr": 0.01
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "total_steps": 25000,
      "anneal_strategy": "linear",
      "max_lr": 0.0005
    },
    "frequency": "batch"
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project_libri",
    "len_epoch": 250,
    "grad_norm_clip": 2,
    "beam_search": "False"
  }
}
